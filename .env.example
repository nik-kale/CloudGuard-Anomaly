# CloudGuard-Anomaly Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection URL (SQLite, PostgreSQL, MySQL supported)
DATABASE_URL=sqlite:///cloudguard.db
# DATABASE_URL=postgresql://user:password@localhost:5432/cloudguard
# DATABASE_URL=mysql://user:password@localhost:3306/cloudguard

# Database connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
# LLM provider: auto (detect from keys), claude, openai, local, none
LLM_PROVIDER=auto

# Anthropic (Claude) API key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI API key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Specific model to use (optional, defaults to provider's default)
# LLM_MODEL=claude-3-5-sonnet-20241022
# LLM_MODEL=gpt-4

# Local LLM URL (for Ollama or similar)
LOCAL_LLM_URL=http://localhost:11434

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
# REQUIRED: Secret key for session management (generate with: python -c 'import secrets; print(secrets.token_hex(32))')
DASHBOARD_SECRET_KEY=

# Dashboard server settings
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000
DASHBOARD_DEBUG=false

# =============================================================================
# AUTHENTICATION & AUTHORIZATION
# =============================================================================
# Enable authentication (requires DASHBOARD_SECRET_KEY)
ENABLE_AUTH=false

# Session timeout in seconds (default: 1 hour)
SESSION_TIMEOUT=3600

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=

# Generic webhook URL
WEBHOOK_URL=

# =============================================================================
# SECRETS MANAGEMENT
# =============================================================================
# Backend for secrets: env (environment variables), vault (HashiCorp Vault), aws (AWS Secrets Manager)
SECRETS_BACKEND=env

# HashiCorp Vault configuration
VAULT_URL=
VAULT_TOKEN=

# =============================================================================
# CLOUD PROVIDER CONFIGURATION
# =============================================================================
# AWS configuration
AWS_PROFILE=
AWS_REGION=us-east-1

# Azure configuration
AZURE_SUBSCRIPTION_ID=

# GCP configuration
GCP_PROJECT_ID=

# =============================================================================
# SCANNING CONFIGURATION
# =============================================================================
# Number of parallel workers for scanning (default: 10)
SCAN_PARALLEL_WORKERS=10

# Enable incremental scanning (only scan changed resources)
ENABLE_INCREMENTAL_SCAN=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Monitoring interval in seconds (default: 1 hour)
MONITORING_INTERVAL=3600

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Cache backend: simple (in-memory), redis
CACHE_BACKEND=simple

# Redis URL (if using Redis cache)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# RATE LIMITING
# =============================================================================
# Enable rate limiting for dashboard API
RATE_LIMIT_ENABLED=true

# Default rate limit (format: "N per UNIT", e.g., "100 per hour", "10 per minute")
RATE_LIMIT_DEFAULT=100 per hour

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: text (human-readable), json (structured logging)
LOG_FORMAT=text

# =============================================================================
# REPORTS CONFIGURATION
# =============================================================================
# Directory for generated reports
REPORTS_DIR=./reports
